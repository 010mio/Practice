<h2>Results index</h2>
<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
    <thead>
      <td>Image</td>
      <td>Nmae</td>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
        <td><%= image_tag user.get_profile_image(100,100) %></td>
        <td><%= user.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
    <thead>
      <td>Image</td>
      <td>Title</td>
      <td>Opinion</td>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
        <td><%= image_tag book.user. get_profile_image(100,100) %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>